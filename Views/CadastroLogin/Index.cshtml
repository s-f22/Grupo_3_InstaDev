@{
    ViewData["Title"] = "CadastroLoginController";
}

<div class="conteiner">
    <div class="bg">
        <div class="box logar">
            <h2>Já tem uma conta ?</h2>
            <button class="logarBut">Logar</button>
        </div>
        <div class="box cadastrar">
            <h2>Não tem uma conta?</h2>
            <button class="cadasBut">Cadastrar-se</button>
        </div>
    </div>
    <div class="formbx">
        <div class="form login">
            
            <form method="POST" action='@Url.Action("Logar")'>
                <img src="~/img/img_EdicaoPerfil/Instadev.png" alt="">
                <input type="email" placeholder="Email" name="Email" required>
                <input type="password" placeholder="Senha" name="Senha" required>

                <div>@TempData.Peek("Mensagem")</div>

                <input type="submit" value="Entrar">
                <a href="#" class="esqc">Esqueceu a senha?</a>
            </form>
        </div>

        <div class="form cadas">
            <form method="POST" action='@Url.Action("Cadastrar")'>
                <img src="~/img/img_EdicaoPerfil/Instadev.png" alt="">
                <input type="email" placeholder="Email" name="Email">
                <input type="text" placeholder="NomeCompleto" name="NomeCompleto">
                <input type="text" placeholder="NomeDeUsuario" name="NomeDeUsuario">
                <input type="password" placeholder="Senha" name="Senha">
                <input type="submit" value="Cadastrar-se">
                
            </form>
        </div>
    </div>
</div>

<script src="~/js/site.js"></script>
